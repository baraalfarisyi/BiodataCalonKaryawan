                <span asp-validation-for="TempatLahir" class="text-danger"></span>
                <label asp-for="TanggalLahir" class="control-label"></label>
                <input type="date" asp-for="TanggalLahir" class="form-control" />
                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Agama" class="control-label"></label>
                <input asp-for="Agama" class="form-control" />
                <span asp-validation-for="Agama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GolDarah" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="GolDarah" asp-items="Html.GetEnumSelectList<GolDarah>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="GolDarah" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="col-md-2 control-label"></label>
