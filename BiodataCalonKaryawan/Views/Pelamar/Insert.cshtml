                <div class="col-md-10">
                    <select asp-for="BersediaDitempatkan" asp-items="Html.GetEnumSelectList<BersediaDitempatkan>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="BersediaDitempatkan" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PendapatanHarapan" class="control-label"></label>
                <input asp-for="PendapatanHarapan" class="form-control" />
                <span asp-validation-for="PendapatanHarapan" class="text-danger"></span>
            </div>
            <div class="form-group row mt-2">
                <div class="d-grid col-md-6">
