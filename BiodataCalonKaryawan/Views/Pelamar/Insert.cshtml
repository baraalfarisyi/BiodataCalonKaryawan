@using BiodataCalonKaryawan.Models.enums
@model BiodataCalonKaryawan.Models.ViewModels.InputPelamar
@{
    ViewData["Title"] = "Insert Pelamar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Insert Pelamar Form</h4>
<hr />

<div class="text-danger m-2">
    @ViewBag.Message
</div>

<div class="row">
    <div class="col-md-6 m-1">
        <form asp-controller="Pelamar" asp-action="Insert" method="post">
            <div class="form-group">
                <label asp-for="Posisi" class="control-label"></label>
                <input asp-for="Posisi" class="form-control" />
                <span asp-validation-for="Posisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempatLahir" class="control-label"></label>
