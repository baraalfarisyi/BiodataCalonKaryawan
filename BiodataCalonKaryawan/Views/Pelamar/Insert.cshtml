                <span asp-validation-for="EmergencyName" class="text-danger"></span>
                <label asp-for="EmergencyNo" class="control-label"></label>
                <input asp-for="EmergencyNo" class="form-control" />
                <span asp-validation-for="EmergencyNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputPendidikanTerakhir.Jenjang" class="control-label"></label>
                <input asp-for="InputPendidikanTerakhir.Jenjang" class="form-control" />
                <span asp-validation-for="InputPendidikanTerakhir.Jenjang" class="text-danger"></span>
            </div>
            <div class="form-group">
