                <span asp-validation-for="InputPendidikanTerakhir.TahunLulus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputPendidikanTerakhir.IPK" class="control-label"></label>
                <input asp-for="InputPendidikanTerakhir.IPK" class="form-control" />
                <span asp-validation-for="InputPendidikanTerakhir.IPK" class="text-danger"></span>
            </div>
            <div class="form-group">
